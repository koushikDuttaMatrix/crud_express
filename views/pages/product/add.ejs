<% include ../../partials/head %>
<% include ../../partials/header %>
<div class="container">
  <div class="jumbotron">
  <h3>Add Product <a href="/products" class="btn btn-info">Product List</a></h3>
</div>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="col-sm-8">
    	<form method="POST" id="add_form" action="/product-add-post" enctype="multipart/form-data">
        <div class="form-group">
    	    <label for="name">Product Category <span class="require-class">*</span></label>
    	    <select class="form-control" id="category_id" name="category_id" autocomplete="off" data-validation="required">
            <option value="">--Select--</option>
            <% for(var i=0;i<category_list.length;i++) {%>
              <option value="<%= category_list[i].id%>"><%= category_list[i].name %></option>
            <%}%>
          </select>
    	  </div>
    	  <div class="form-group">
    	    <label for="name">Name <span class="require-class">*</span></label>
    	    <input type="text" class="form-control" id="name" name="name" autocomplete="off" data-validation="required">
    	  </div>

    	  <div class="form-group">
    	    <label for="description">Description <span class="require-class">*</span></label>
    	    <textarea class="form-control" id="description" name="description" autocomplete="off" data-validation="required" rows="5"></textarea>
    	  </div>

        <div class="form-group">
    	    <label for="description">Product Image</label>
          <input type="file" class="form-control" name="product_image" id="product_image">
    	  </div>
        <div class="form-group">
    	  <button type="submit" class="btn btn-success">Submit</button>
    	  <button type="reset" class="btn btn-danger">Reset</button>
      </div>
    	</form>
    </div>
  </div>
  </div>
</div>
<% include ../../partials/footer %>
<script>
  $.validate();
  $('#my-textarea').restrictLength( $('#max-length-element') );
</script>
